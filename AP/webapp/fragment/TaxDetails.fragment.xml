<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog draggable="true" type='Message' title="{i18n>TaxData}" contentWidth="70%">
		<content>
			<Table items="{postDataModel>/listNonPoItem}" class="sapUiSizeCompact">
				<columns>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>DebtCred}" design="Bold"/>
					</Column>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>Amount}" design="Bold"/>
					</Column>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>BaseAmount}" design="Bold"/>
					</Column>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>TaxCode}" design="Bold"/>
					</Column>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>TaxRate}" design="Bold"/>
					</Column>
					<Column hAlign="Center" minScreenWidth="Small" demandPopin="true">
						<Label text="{i18n>TaxAmount}" design="Bold"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{path: 'postDataModel>crDbIndicator', formatter:'com.menabev.AP.formatter.formatter.crDbIndicator' }" textAlign="Center"/>
							<Text text="{postDataModel>netValue}" textAlign="Center"/>
							<Text text="{postDataModel>baseRate}" textAlign="Center"/>
							<Text text="{postDataModel>taxCode}" textAlign="Center"/>
							<Text text="{postDataModel>taxPer}" textAlign="Center"/>
							<Text text="{postDataModel>taxValue}" textAlign="Center"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<VBox class="sapUiTinyMarginTop">
				<HBox>
					<Label text="{i18n>InvoiceTaxAmount:}"/>
					<Text text="{nonPOInvoiceModel>/invoiceDetailUIDto/invoiceHeader/taxAmount}" class="sapUiTinyMarginBegin"/>
				</HBox>
			</VBox>
		</content>
		<endButton>
			<Button text="{i18n>OK}" press="taxDetailsDialogClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>