<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<l:Grid id="POgrid" defaultSpan="L3 M6 S12">
		<l:content>
			<VBox>
				<Label text="{i18n>TRANSACTION}" required="true"></Label>
				<Select forceSelection="false" width="80%" items="{StaticDataModel>/transactionType}" selectedKey="{oPOModel>/transactionType}" valueStateText=" "
					valueState="{oMandatoryModel>/NonPO/transactionTypeState}" change="onTransactionChange" enabled="{oVisiblityModel>/editable}">
					<core:ListItem key="{StaticDataModel>key}" text="{StaticDataModel>value}"/>
				</Select>
			</VBox>
			<VBox>
				<Label text="{i18n>VendorId}" required="true" class="sapUiTinyMarginTop"/>
				<Input filterSuggests="false" value="{oPOModel>/vendorId}" width="80%" showSuggestion="true" suggest="VendorIdSuggest"
					valueState="{oMandatoryModel>/NonPO/vendorIdState}" tooltip="{oPOModel>/vendorId}" suggestionItemSelected="vendorIdSelected" change="onVendorIdChange"
					suggestionItems="{oDropDownModel>/VendorIdSuggest}" maxLength="10" editable="{oVisibilityModel>/NonPOInvoice/editable}">
					<suggestionItems>
						<core:ListItem text="{oDropDownModel>Supplier}" additionalText="{oDropDownModel>SupplierName}"/>
					</suggestionItems>
				</Input>
			</VBox>
			<VBox>
				<Label text="{i18n>VendorName}" class="sapUiTinyMarginTop"/>
				<Input filterSuggests="false" value="{oPOModel>/vendorName}" width="80%" type="Text" showSuggestion="true" suggest="VendorIdSuggest" change="onVendorNameChange"
					valueState="{oMandatoryModel>/NonPO/vendorNameState}" tooltip="{oPOModel>/vendorName}" suggestionItemSelected="vendorNameSelected"
					suggestionItems="{oDropDownModel>/VendorIdSuggest}" editable="{oVisibilityModel>/NonPOInvoice/editable}">
					<suggestionItems>
						<core:ListItem text="{oDropDownModel>SupplierName}" additionalText="{oDropDownModel>Supplier}"/>
					</suggestionItems>
				</Input>
			</VBox>
			<VBox>
				<Label text="{i18n>COMPANYCODE}"/>
				<Input value="{oPOModel>/companyCode}" valueStateText=" " valueState="{oMandatoryModel>/NonPO/companyCodeState}" width="80%"
					editable="{oVisibilityModel>/NonPOInvoice/editable}" change="onCompanyCodeChange"/>
			</VBox>
			<VBox>
				<Label text="{i18n>CURRENCY}"/>
				<Input value="{oPOModel>/currency}" valueStateText=" " valueState="{oMandatoryModel>/NonPO/currencyState}" width="80%"
					editable="{oVisibilityModel>/NonPOInvoice/editable}" change="onCurrencyChange"/>
				<layoutData>
					<l:GridData linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Label required="true" text="{i18n>InvoiceNo}" class="sapUiTinyMarginTop"/>
				<Input value="{oPOModel>/invoiceRefNum}" width="80%" change="onInvRefChange" maxLength="16"
					valueState="{oMandatoryModel>/NonPO/invoiceRefNumState}" editable="{oVisibilityModel>/NonPOInvoice/editable}"/>
			</VBox>
			<VBox id="idDate">
				<Label text="{i18n>InvoiceDate}" required="true" class="sapUiTinyMarginTop"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="MM/dd/YYYY" width="80%"
					value="{ path:'oPOModel>/documentDate',formatter: 'com.menabev.AP.formatter.formatter.getDate'}"
					valueState="{oMandatoryModel>/NonPO/documentDateState}" change="onInvDateChange" editable="{oVisibilityModel>/NonPOInvoice/editable}"/>
			</VBox>
			<VBox >
				<Label text="{i18n>BASELINEDATE}" required="true"/>
				<DatePicker valueFormat="yyyy-MM-dd" displayFormat="MM/dd/YYYY" width="80%"
					value="{ path:'oPOModel>/baselineDate',formatter: 'com.menabev.AP.formatter.formatter.getDate'}"
					valueState="{oMandatoryModel>/NonPO/baselineDateState}" change="onBaseLineDateChange" editable="{oVisibilityModel>/NonPOInvoice/editable}"/>
			</VBox>
			<VBox>
				<Label text="{i18n>BatchId}"/>
				<Input value="{oPOModel>/ocrBatchId}" width="80%" editable="{oVisibilityModel>/NonPOInvoice/editable}"
					valueState="{oMandatoryModel>/NonPO/ocrBatchIdState}"/>
				<layoutData>
					<l:GridData linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox >
				<Label text="{i18n>PostingDate}" required="true"/>
				<DatePicker displayFormat="MM/dd/YYYY" valueFormat="yyyy-MM-dd" width="80%"
					value="{ path:'oPOModel>/postingDate',formatter: 'com.menabev.AP.formatter.formatter.getDate'}"
					valueState="{oMandatoryModel>/NonPO/postingDateState}" change="onPostingDateChange" editable="{oVisibilityModel>/NonPOInvoice/editable}"/>
			</VBox>
			<VBox >
				<Label text="{i18n>DueDate}"/>
				<DatePicker displayFormat="MM/dd/YYYY" valueFormat="yyyy-MM-dd" width="80%" valueState="{oMandatoryModel>/NonPO/dueDateState}"
					value="{path:'oPOModel>/dueDate',formatter: 'com.menabev.AP.formatter.formatter.getDate'}"
					editable="{oVisibilityModel>/NonPOInvoice/editable}" change="onDueDateChange"/>
			</VBox>
			<VBox >
				<Label text="{i18n>PaymentTerms}"/>
				<Select forceSelection="false" showSecondaryValues="true" selectedKey="{oPOModel>/paymentTerms}" items="{oDropDownModel>/paymentTermResult}"
					valueState="{oMandatoryModel>/NonPO/paymentTermsState}" width="80%" enabled="{oVisibilityModel>/NonPOInvoice/editable}"
					change="onPaymentTermsChange">
					<items>
						<core:ListItem key="{oDropDownModel>PmntTerm}" text="{oDropDownModel>PmntTermDesc}"/>
					</items>
				</Select>
			</VBox>
			<VBox >
				<Label text="{i18n>PaymentMethod}"/>
				<Select forceSelection="false" showSecondaryValues="true" selectedKey="{nonPOInvoiceModel>/invoiceDetailUIDto/paymentMethod}"
					valueState="{oMandatoryModel>/NonPO/paymentMethodState}" items="{oDropDownModel>/paymentMethodResult}" width="80%"
					enabled="{oVisibilityModel>/NonPOInvoice/editable}" change="onPaymentMethodChange">
					<items>
						<core:ListItem key="{oDropDownModel>PmntMeth}" text="{oDropDownModel>PmntMethName}"/>
					</items>
				</Select>
				<layoutData>
					<l:GridData linebreak="true"/>
				</layoutData>
			</VBox>
			<VBox>
				<Label text="{i18n>PaymentBlock}"/>
				<Select forceSelection="false" id="paymentBlockComBox" showSecondaryValues="true" valueState="{oMandatoryModel>/NonPO/paymentBlockState}"
					selectedKey="{nonPOInvoiceModel>/invoiceDetailUIDto/paymentBlock}" items="{oDropDownModel>/paymentBlockResult}" width="80%"
					enabled="{oVisibilityModel>/NonPOInvoice/editable}" change="onPaymentBlockChange">
					<items>
						<core:ListItem key="{oDropDownModel>PmntBlk}" text="{oDropDownModel>PmntBlkDesc}"/>
					</items>
				</Select>
			</VBox>
			<VBox>
				<Label text="{i18n>TaxCode}"/>
				<Select forceSelection="false" id="taxCodeId" showSecondaryValues="true" valueState="{oMandatoryModel>/NonPO/taxCodeState}"
					selectedKey="{oPOModel>/headerTaxcode}" items="{oDropDownModel>/taxCodeResult}" width="80%" change="onTaxCodeChange"
					enabled="{oVisibilityModel>/NonPOInvoice/editable}">
					<items>
						<core:ListItem key="{oDropDownModel>TxCode}" text="{oDropDownModel>TxCode}" additionalText="{oDropDownModel>TaxCodeName}"/>
					</items>
				</Select>
			</VBox>
			<VBox>
				<Label text="{i18n>UNPLANNEDCOST}"/>
				<Input value="{oPOModel>/unplannedCost}" width="80%" editable="{oVisibilityModel>/NonPOInvoice/editable}"
					valueState="{oMandatoryModel>/NonPO/unplannedCostState}"/>
			</VBox>
			<VBox>
				<Label text="{i18n>INVOICETYPE}"/>
				<Select forceSelection="false" showSecondaryValues="true" valueState="{oMandatoryModel>/NonPO/invoiceTypeState}"
					selectedKey="{oPOModel>/invoiceType}" items="{StaticDataModel>/invoiceType}" width="80%" change="onChangeInvoiceType"
					enabled="{oVisibilityModel>/NonPOInvoice/editable}">
					<items>
						<core:ListItem key="{StaticDataModel>key}" text="{StaticDataModel>value}"/>
					</items>
				</Select>
				<layoutData>
					<l:GridData linebreak="true"/>
				</layoutData>
			</VBox>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>