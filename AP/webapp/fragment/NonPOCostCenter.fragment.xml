<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core"
	controllerName="com.menabev.AP.controller.NonPOInvoice" id="prefix1">
	<ScrollContainer vertical="true" horizontal="false">
		<Table id="idNonPo" class="MNBTable" items="{ path: 'postDataModel>/listNonPoItem', templateShareable : true }"	
				sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
			<columns>
				<Column width="10em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/0/status}" hAlign="Center" id="glaccountCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>GLAccount}" design="Bold" required="true"/>
				</Column>
				<Column width="16em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/1/status}" hAlign="Center" id="descriptionCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>Description}" design="Bold"/>
				</Column>
				<Column width="10em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/2/status}" hAlign="Center" id="debtCredCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>DebtCred}" design="Bold"/>
				</Column>
				<Column width="9em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/3/status}" hAlign="Center" id="amountCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>Amount}" design="Bold" required="true"/>
				</Column>
				<Column width="12em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/4/status}" hAlign="Center" id="costcenterCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>CostCentre}" design="Bold" required="true"/>
				</Column>
				<!--<Column width="6em" hAlign="Center" id="taxCodeCol" minScreenWidth="Small" demandPopin="true">-->
				<!--	<Label text="{i18n>TaxCode}" design="Bold"/>-->
				<!--</Column>-->
				<Column width="9em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/5/status}" hAlign="Center" id="orderCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>Order}" design="Bold"/>
				</Column>
				<Column width="9em" visible="{PersonalizationModel>/personalizationData/userPersonaDto/6/status}" hAlign="Center" id="pfCol"
					minScreenWidth="Small" demandPopin="true">
					<Label text="{i18n>ProfitCentre}" design="Bold"/>
				</Column>
				<Column hAlign="Center" visible="{PersonalizationModel>/personalizationData/userPersonaDto/7/status}" id="textCol" minScreenWidth="Small"
					demandPopin="true">
					<Label text="{i18n>Text}" design="Bold" required="true"/>
				</Column>
				<Column hAlign="Center" visible="{PersonalizationModel>/personalizationData/userPersonaDto/8/status}" id="comcdCol" minScreenWidth="Small"
					demandPopin="true">
					<Label text="{i18n>CoCd}" design="Bold"/>
				</Column>
				<Column id="deleteBtnCol" visible="{PersonalizationModel>/personalizationData/userPersonaDto/9/status}" minScreenWidth="Small"
					demandPopin="true">
					<Label text="{i18n>Action}" design="Bold"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Input class="tbCellBorder glaccount" value="{postDataModel>glAccount}" filterSuggests="false"
							suggestionItems="{path:'glAccountModel>/d/results', templateShareable : true }" tooltip="{postDataModel>glCode}"
							suggestionItemSelected="glDescription" showSuggestion="true" suggest="glAccountSuggest" change="getGLaccountValue"
							valueState="{postDataModel>glError}">
							<suggestionItems>
								<core:ListItem text="{path:'glAccountModel>GLAccounts',formatter:'com.menabev.AP.util.formatter.removeZero'}"
									additionalText="{glAccountModel>GLAccDesc}"/>
							</suggestionItems>
						</Input>
						<Text class="sapUiTinyMarginEnd" text="{postDataModel>materialDescription}"/>
						<Select selectedKey="{postDataModel>crDbIndicator}" change="amountCal" class="dropDownCss tableDropDownCss tbCellBorder"
							tooltip="{postDataModel>materialDescription}">
							<core:Item text="Debit" key="H"/>
							<core:Item text="Credit" key="S"/>
						</Select>
						<Input class="tbCellBorder amountstate sapUiTinyMarginEnd" type="Number" value="{postDataModel>netValue}" change="amountCal"
							valueState="{postDataModel>amountError}"/>
						<Input class="tbCellBorder costcenterstate sapUiTinyMarginEnd" value="{postDataModel>costCenter}" tooltip="{postDataModel>costCenter}"
							suggestionItems="{ path:'costCenterModel>/d/results', templateShareable : true}" filterSuggests="false" showSuggestion="true"
							suggest="costCenterSuggest" liveChange="handlecostCentreInput" change="onChangeCostCenter" valueState="{postDataModel>costCenterError}">
							<suggestionItems>
								<core:ListItem text="{costCenterModel>CostCenters}" additionalText="{costCenterModel>CostCenterDesc}"/>
							</suggestionItems>
						</Input>
						<!--<Input class="sapUiTinyMarginEnd" value="{postDataModel>taxCode}" tooltip="{postDataModel>taxCode}"/>-->
						<Input class="sapUiTinyMarginEnd" value="{postDataModel>internalOrderId}" tooltip="{postDataModel>internalOrderId}"
							suggestionItems="{path:'internalOrderModel>/d/results', templateShareable : true}" filterSuggests="false" showSuggestion="true"
							suggest="internalOrderSuggest">
							<suggestionItems>
								<core:ListItem text="{path:'internalOrderModel>IntOrdNumber', formatter:'com.menabev.AP.util.formatter.removeZero'}"
									additionalText="{internalOrderModel>IntOrdDesc}"/>
							</suggestionItems>
						</Input>
						<Input class="sapUiTinyMarginEnd" value="{postDataModel>profitCentre}" tooltip="{postDataModel>profitCentre}"/>
						<Input class="sapUiTinyMarginEnd" width="100%" value="{postDataModel>itemText}" tooltip="{postDataModel>text}"
							valueState="{postDataModel>itemTextError}" change="onChangeText"/>
						<Input class="sapUiTinyMarginEnd" width="100%" value="{postDataModel>companyCode}" tooltip="{postDataModel>companyCode}"
							suggestionItems="{path:'companyCodeModel>/d/results', templateShareable : true}" filterSuggests="false" showSuggestion="true"
							suggest="companyCodeSuggest">
							<suggestionItems>
								<core:ListItem text="{companyCodeModel>CompCodeDesc}"
									additionalText="{path : 'companyCodeModel>CompCode' , formatter:'com.menabev.AP.util.formatter.removeZero'}"/>
							</suggestionItems>
						</Input>
						<Button type="Reject" icon="sap-icon://delete" tooltip="Delete" press="deleteNonPoItemData"
							class="tableBtnAlignMent tableSelectionChkBox dynamicCls sapUiTinyMarginEnd"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</core:FragmentDefinition>