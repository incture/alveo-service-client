<mvc:View controllerName="com.menabev.AP.controller.Inbox" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Page showHeader="false" class="sapUiSizeCompact">
		<content>
			<VBox class="salesReportHdrBoxClass">
				<Toolbar class="tabClass">
					<content>
						<Label text="Configuration Cockpit" class="matTblLblClass"></Label>
					</content>
				</Toolbar>
				<fb:FilterBar  search="getInboxData" clear="fnClear" showClearButton="true" vSpacing="0" hSpacing="1"
					filterContainerWidth="15rem" position="Right" visible="{baseModel>/SearchVisiblity}">
					<fb:filterItems>
						<fb:FilterItem name="A" label="{i18n>Vendor Id}">
							<fb:control>
								<Input value="{taskDataFilterModel>/vendorId}" />
								<!--<Input value="{taskDataFilterModel>/vendorId} {taskDataFilterModel>/vendorName}" id="vendorInboxId"-->
								<!--	class="filterValueStyle  inputPopCls" suggest="searchVendorId" startSuggestion="3" maxSuggestionWidth="44rem"-->
								<!--	showSuggestion="true" filterSuggests="false" maxLength="20" showTableSuggestionValueHelp="false"-->
								<!--	suggestionRows="{suggestionModel>/d/results}" suggestionItemSelected="onVendorSelected" change="chkSelectedVendor">-->
								<!--	<suggestionColumns>-->
								<!--		<Column width="66px" hAlign="Begin">-->
								<!--			<Label text="Vendor Id"/>-->
								<!--		</Column>-->
								<!--		<Column width="160px" hAlign="Center">-->
								<!--			<Label text="Vendor Name1"/>-->
								<!--		</Column>-->
								<!--	</suggestionColumns>-->
								<!--	<suggestionRows>-->
								<!--		<ColumnListItem>-->
								<!--			<cells>-->
								<!--				<Text text="{path:'suggestionModel>Vendor'}" wrapping="true"/>-->
								<!--				<Text text="{suggestionModel>Name1}" tooltip="{suggestionModel>Name1}"/>-->
								<!--<Text text="{suggestionModel>Name2}" tooltip="{suggestionModel>Name2}"/>-->
								<!--<Text text="{suggestionModel>Search_term}"/>-->
								<!--			</cells>-->
								<!--		</ColumnListItem>-->
								<!--	</suggestionRows>-->
								<!--</Input>-->
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="B" label="{i18n>inboxRequestID}">
							<fb:control>
								<Input value="{taskDataFilterModel>/requestId}" />
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="C" label="{i18n>InvoiceNo}">
							<fb:control>
								<Input value="{taskDataFilterModel>/extInvNum}"  maxSuggestionWidth="16rem" startSuggestion="3"
									showSuggestion="true" filterSuggests="false"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="D" label="{i18n>InvoiceDateFrom}">
							<fb:control>
								<DatePicker displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
									value="{taskDataFilterModel>/createdAtFrom}"  tooltip="Invoice From Date" change="onDateRangeChange"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="E" label="{i18n>InvoiceDateTo}">
							<fb:control>
								<DatePicker  displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
									value="{taskDataFilterModel>/createdAtTo}"  tooltip="Invoice To Date" change="onDateRangeChange"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="F" label="{i18n>AssignedTo}">
							<fb:control>
								<Input value="{taskDataFilterModel>/assignedTo}" tooltip="Invoice Value From" />
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="G" label="{i18n>DueDateFrom}">
							<fb:control>
								<DatePicker displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
									value="{taskDataFilterModel>/dueDateFrom}"  tooltip="Due From Date" change="onDateRangeChange"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="H" label="{i18n>DueDateTo}">
							<fb:control>
								<DatePicker  displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
									value="{taskDataFilterModel>/dueDateTo}"  tooltip="Due To Date" change="onDateRangeChange"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="I" label="{i18n>InvoiceValueFrom}">
							<fb:control>
								<Input value="{taskDataFilterModel>/invoiceTotalFrom}" tooltip="Invoice Value From" 
									liveChange="onChangeInvoiceValue"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="J" label="{i18n>InvoiceValueTo}">
							<fb:control>
								<Input value="{taskDataFilterModel>/invoiceTotalTo}" liveChange="onChangeInvoiceValue"  tooltip="Invoice Value To"/>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="K" label="{i18n>ProcessStatus}">
							<fb:control>
								<Select  forceSelection="false" items="{processModel>/items}"
									selectedKey="{taskDataFilterModel>/validationStatus}">
									<core:Item key="{processModel>lifeCycleStatus}" text="{processModel>text}"/>
								</Select>
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="L" label="{i18n>InvoiceType}">
							<fb:control>
								<Select  forceSelection="false" selectedKey="{taskDataFilterModel>/invoiceType}">
									<core:Item key="INVOICE" text="Invoice"/>
									<core:Item key="NONPO" text="Non-PO"/>
								</Select>
							</fb:control>
						</fb:FilterItem>
					</fb:filterItems>
				</fb:FilterBar>
				<!--<Toolbar>-->
				<!--	<ToolbarSpacer></ToolbarSpacer>-->
				<!--	<Button text="Apply"  type="Emphasized" press="getInboxData"></Button>-->
				<!--	<Button text="Clear"  type="Default" press="fnClear"></Button>-->
				<!--</Toolbar>-->
			</VBox>
			<IconTabBar id="idIconTabBarNoIcons" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" select="onSelectTab">
				<items>
					<IconTabFilter text="{i18n>OPENTASK} ({oInboxModel>/openResultCount})" key="openTask">
						<Table items="{oInboxModel>/openResult}" mode="None" class="labelwrapTable" sticky="ColumnHeaders">
							<headerToolbar>
								<OverflowToolbar>
									<ToolbarSpacer></ToolbarSpacer>
									<Button text="{i18n>CreateInvoice}"  type="Emphasized" press="onCreateInvoice"  visible="{oVisibilityModel>/Inbox/btnCreateInvVisible}"/>
									<Button icon="sap-icon://action-settings" type="Emphasized"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column hAlign="Center">
									<Label text="{i18n>inboxRequestID}" design="Bold" wrapping="true"/>
								</Column>
								<Column hAlign="Center">
									<Label text="{i18n>Vendor}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice No.}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice Date}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>InvoiceType}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>Value}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>DueDate}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>validationStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>taskStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>ACTION}" design="Bold" wrapping="true"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<Link text="{oInboxModel>requestId}" press="onReqIdOpenSelect" wrapping="true"/>
									<Text text="{oInboxModel>vendorId}-{oInboxModel>vendorName}"/>
									<Text text="{oInboxModel>extInvNum}"/>
									<Text text="{path:'oInboxModel>invoiceDate', formatter:'com.menabev.AP.formatter.formatter.formatDate'}"/>
									<Text text="{oInboxModel>invoiceType}"/>
									<Text text="{oInboxModel>invoiceTotal}"/>
									<Text text="{path:'oInboxModel>dueDate', formatter:'com.menabev.AP.formatter.formatter.formatDate'} "/>
									<Text text="{oInboxModel>validationStatus}"/>
									<Text text="{oInboxModel>taskStatus}"/>
									<core:Icon src="sap-icon://locked" tooltip="claim" press="onClaimRelease">
										<core:layoutData>
											<FlexItemData growFactor="1"/>
										</core:layoutData>
									</core:Icon>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter text="{i18n>MYTASK} ({oInboxModel>/resultCount})" key="myTask">
						<Table items="{oInboxModel>/result}" mode="None" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders">
							<headerToolbar>
								<OverflowToolbar>
									<ToolbarSpacer></ToolbarSpacer>
									<Button text="{i18n>CreateInvoice}" press="onCreateInvoice"  visible="{oVisibilityModel>/Inbox/btnCreateInvVisible}"/>
									<Button icon="sap-icon://action-settings" type="Transparent"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column hAlign="Center">
									<Label text="{i18n>inboxRequestID}" design="Bold" wrapping="true"/>
								</Column>
								<Column hAlign="Center">
									<Label text="{i18n>Vendor}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice No.}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice Date}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>InvoiceType}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>Value}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>DueDate}" design="Bold"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>validationStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>taskStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="8%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>ACTION}" design="Bold" wrapping="true"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<Link text="{oInboxModel>requestId}" press="onReqIdClaimSelect" wrapping="true"/>
									<Text text="{oInboxModel>vendorId}-{oInboxModel>vendorName}"/>
									<Text text="{oInboxModel>extInvNum}"/>
									<Text text="{path:'oInboxModel>invoiceDate', formatter:'com.menabev.AP.formatter.formatter.formatDate'}"/>
									<Text text="{oInboxModel>invoiceType}"/>
									<Text text="{oInboxModel>invoiceTotal}"/>
									<Text text="{path:'oInboxModel>dueDate', formatter:'com.menabev.AP.formatter.formatter.formatDate'} "/>
									<Text text="{oInboxModel>validationStatus}"/>
									<Text text="{oInboxModel>taskStatus}"/>
									<core:Icon src="sap-icon://unlocked" tooltip="release" press="onClaimRelease">
										<core:layoutData>
											<FlexItemData growFactor="1"/>
										</core:layoutData>
									</core:Icon>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<OverflowToolbar class="pageNumberCls" visible="{paginatedModel>/pageVisible}">
				<content>
					<HBox>
						<Button icon="sap-icon://nav-back" class=" navPageCls" press="onScrollLeft" type="Default"
							enabled="{paginatedModel>/prevButton}"/>
						<SegmentedButton items="{paginatedModel>/array}" class="sapUiSmallMarginBeginEnd">
							<items>
								<SegmentedButtonItem text="{paginatedModel>text}" key="{paginatedModel>text}" press="onPageClick"/>
							</items>
						</SegmentedButton>
						<Button enabled="{paginatedModel>/nextbutton}" icon="sap-icon://navigation-right-arrow" class=" navPageCls" type="Default"
							press="onScrollRight"/>
					</HBox>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>