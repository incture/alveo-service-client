									<!--	</suggestionRows>-->
									<!--</Input>-->
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="B" label="{i18n>inboxRequestID}">
								<fb:control>
									<Input value="{taskDataFilterModel>/requestId}" class="sapUiSizeCompact"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="C" label="{i18n>InvoiceNo}">
								<fb:control>
									<Input value="{taskDataFilterModel>/extInvNum}" class="sapUiSizeCompact" maxSuggestionWidth="16rem" startSuggestion="3"
										showSuggestion="true" filterSuggests="false"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="D" label="{i18n>InvoiceDateFrom}">
								<fb:control>
									<DatePicker id="idInvoiceFrom" displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
										value="{taskDataFilterModel>/createdAtFrom}" class="sapUiSizeCompact" tooltip="Invoice From Date"
										change="onDateRangeChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="E" label="{i18n>InvoiceDateTo}">
								<fb:control>
									<DatePicker id="idInvoiceTo" displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
										value="{taskDataFilterModel>/createdAtTo}" class="sapUiSizeCompact" tooltip="Invoice To Date" change="onDateRangeChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="F" label="{i18n>AssignedTo}">
								<fb:control>
									<Input value="{taskDataFilterModel>/assignedTo}" tooltip="Invoice Value From" class="sapUiSizeCompact"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="G" label="{i18n>DueDateFrom}">
								<fb:control>
									<DatePicker id="idDueFrom" displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
										value="{taskDataFilterModel>/dueDateFrom}" class="sapUiSizeCompact" tooltip="Due From Date" change="onDateRangeChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="H" label="{i18n>DueDateTo}">
								<fb:control>
									<DatePicker id="idDueTo" displayFormat="MM/dd/yyyy" valueFormat="yyyy-MM-dd" placeholder="mm/dd/yyyy"
										value="{taskDataFilterModel>/dueDateTo}" class="sapUiSizeCompact" tooltip="Due To Date" change="onDateRangeChange"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="I" label="{i18n>InvoiceValueFrom}">
								<fb:control>
									<Input value="{taskDataFilterModel>/invoiceTotalFrom}" tooltip="Invoice Value From" class="sapUiSizeCompact"
										liveChange="onChangeInvoiceValue"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="J" label="{i18n>InvoiceValueTo}">
								<fb:control>
									<Input value="{taskDataFilterModel>/invoiceTotalTo}" liveChange="onChangeInvoiceValue" class="sapUiSizeCompact"
										tooltip="Invoice Value To"/>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="K" label="{i18n>ProcessStatus}">
								<fb:control>
									<Select class="sapUiSizeCompact" forceSelection="false" id="processStatusDropDown" items="{processModel>/items}"
										selectedKey="{taskDataFilterModel>/validationStatus}">
										<core:Item key="{processModel>lifeCycleStatus}" text="{processModel>text}"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
							<fb:FilterItem name="L" label="{i18n>InvoiceType}">
								<fb:control>
									<Select class="sapUiSizeCompact" forceSelection="false" selectedKey="{taskDataFilterModel>/invoiceType}">
										<core:Item key="INVOICE" text="Invoice"/>
										<core:Item key="NONPO" text="Non-PO"/>
									</Select>
								</fb:control>
							</fb:FilterItem>
						</fb:filterItems>
					</fb:FilterBar>
					<Toolbar>
						<ToolbarSpacer></ToolbarSpacer>
						<Button text="Apply" class="sapUiSizeCompact" type="Emphasized" press="getInboxData"></Button>
						<Button text="Clear" class="sapUiSizeCompact" type="Default" press="fnClear"></Button>
					</Toolbar>
				</content>
			</Panel>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<SearchField class="sapUiSizeCompact"></SearchField>
				<Button icon="sap-icon://action-settings" type="Transparent"/>
				<Button text="{i18n>CREATEINVOICE}" press="onCreateInvoice"></Button>
			</OverflowToolbar>
			<IconTabBar id="idIconTabBarNoIcons" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" select="onSelectTab">
				<items>
					<IconTabFilter text="{i18n>OPENTASK}" key="openTask">
						<Table items="{oInboxModel>/openResult}" mode="None">
							<columns>
								<Column width="11%" hAlign="Center">
									<Label text="{i18n>inboxRequestID}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="22%" hAlign="Center">
									<Label text="{i18n>Vendor}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice No.}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice Date}" design="Bold"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>InvoiceType}" design="Bold"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>Value}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>DueDate}" design="Bold"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>validationStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>taskStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>ACTION}" design="Bold" wrapping="true"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<Link text="{oInboxModel>requestId}" press="onReqIdOpenSelect"/>
									<Text text="{oInboxModel>vendorId}-{oInboxModel>vendorName}"/>
									<Text text="{oInboxModel>extInvNum}"/>
									<Text text="{path:'oInboxModel>invoiceDate', formatter:'com.menabev.AP.util.formatter.formatDate'}"/>
									<Text text="{oInboxModel>invoiceType}"/>
									<Text text="{oInboxModel>invoiceTotal}"/>
									<Text text="{path:'oInboxModel>dueDate', formatter:'com.menabev.AP.util.formatter.formatDate'} "/>
									<Text text="{oInboxModel>validationStatus}"/>
									<Text text="{oInboxModel>taskStatus}"/>
									<core:Icon src="sap-icon://locked" tooltip="claim" press="onClaimRelease">
										<core:layoutData>
											<FlexItemData growFactor="1"/>
										</core:layoutData>
									</core:Icon>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter text="{i18n>MYTASK}" key="myTask">
						<Table items="{oInboxModel>/result}" mode="None">
							<columns>
								<Column width="11%" hAlign="Center">
									<Label text="{i18n>inboxRequestID}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="22%" hAlign="Center">
									<Label text="{i18n>Vendor}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice No.}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>Invoice Date}" design="Bold"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Tablet" demandPopin="true">
									<Label text="{i18n>InvoiceType}" design="Bold"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>Value}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="11%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>DueDate}" design="Bold"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>validationStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>taskStatus}" design="Bold" wrapping="true"/>
								</Column>
								<Column width="15%" hAlign="Center" minScreenWidth="Desktop" demandPopin="true">
									<Label text="{i18n>ACTION}" design="Bold" wrapping="true"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<Link text="{oInboxModel>requestId}" press="onReqIdClaimSelect"/>
									<Text text="{oInboxModel>vendorId}-{oInboxModel>vendorName}"/>
									<Text text="{oInboxModel>extInvNum}"/>
									<Text text="{path:'oInboxModel>invoiceDate', formatter:'com.menabev.AP.util.formatter.formatDate'}"/>
									<Text text="{oInboxModel>invoiceType}"/>
									<Text text="{oInboxModel>invoiceTotal}"/>
									<Text text="{path:'oInboxModel>dueDate', formatter:'com.menabev.AP.util.formatter.formatDate'} "/>
									<Text text="{oInboxModel>validationStatus}"/>
									<Text text="{oInboxModel>taskStatus}"/>
									<core:Icon src="sap-icon://unlocked" tooltip="release" press="onClaimRelease">
										<core:layoutData>
											<FlexItemData growFactor="1"/>
										</core:layoutData>
									</core:Icon>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
