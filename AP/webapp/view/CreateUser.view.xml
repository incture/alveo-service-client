<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.menabev.AP.controller.CreateUser"
	xmlns:html="http://www.w3.org/1999/xhtml" 	xmlns:l="sap.ui.layout">
	<Page showHeader="false" class="sapUiSizeCompact PageHeader">
		<content>
			<OverflowToolbar>
				<Button icon="sap-icon://nav-back" press="onNavBack"></Button>
				<Text text="Add New User"></Text>
			</OverflowToolbar>
			<l:Grid defaultSpan="XL4 L4 M6 S12" vSpacing="0.5" class="GridBG">
				<l:content>
					<VBox>
						<Label text="{i18n>GROUP}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>FIRSTNAME}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>LASTNAME}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>EMAIL}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>PHONENO}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>COUNTRY}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>VENDORID}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>COMPANYCODE}"></Label>
						<Input value="{}"></Input>
					</VBox>
					<VBox>
						<Label text="{i18n>PURCHASEORGANISATION}"></Label>
						<Input value="{}"></Input>
					</VBox>
				</l:content>
			</l:Grid>
		</content>
		<footer>
			<OverflowToolbar class="footerClass">
				<ToolbarSpacer/>
				<Button type="Emphasized" text="{i18n>CANCEL}"></Button>
					<Button type="Emphasized" text="{i18n>ADDUSER}"></Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>